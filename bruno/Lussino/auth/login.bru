meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/auth/login
  body: json
  auth: none
}

body:json {
  {
    "username": "admin",
    "password": "changeme"
  }
}

assert {
  res.status: eq 200
  res.body.message: eq Login successful
  res.body.user.username: eq admin
}

script:post-response {
  if (res.status === 200) {
    bru.setVar("sessionCookie", res.headers["set-cookie"]);
  }
}
